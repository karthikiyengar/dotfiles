#!bin/bash

# enable compositing
# compton --backend glx --xrender-sync --xrender-sync-fence -fCz --fade-delta 4 &!

# screen lock daemon
xautolock -detectsleep -time 3 -locker "slock" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'Locking screen in 30 seconds'" &

# Applets
nm-applet &
pasystray &
blueman-applet &
greenclip daemon &
mullvad-vpn &

# Set cursor to pointer
xsetroot -cursor_name left_ptr

# Load custom fonts
xset +fp /home/kiyengar/.local/share/fonts
xset fp rehash

# Set the correct xrandr settings
autorandr -c

# Set Wallpaper
feh --bg-scale ~/Wallpapers/dark-space.jpg

# Natural Scrolling
xinput set-prop 'DELL081C:00 044E:121F Touchpad' 'libinput Natural Scrolling Enabled' 1

# Tapping Enabled
xinput set-prop 'DELL081C:00 044E:121F Touchpad' 'libinput Tapping Enabled' 1

# Bluetooh Mouse Natural Scrolling
# sleep 3; xinput set-prop "pointer:MX Master 2S" 'libinput Natural Scrolling Enabled' 1
