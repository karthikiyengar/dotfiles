#!bin/bash

# xscreensaver daemon
xscreensaver -nosplash -log /dev/null &

# Applets
nm-applet &
blueman-applet &
clipit &

# Set cursor to pointer
xsetroot -cursor_name left_ptr

# Load custom fonts
xset +fp /home/kiyengar/.local/share/fonts
xset fp rehash

# Set the correct xrandr settings
autorandr -c

# Set Wallpaper
feh --bg-fill ~/Wallpapers/dark-space.jpg

# Natural Scrolling
xinput set-prop 'DELL081C:00 044E:121F Touchpad' 'libinput Natural Scrolling Enabled' 1
xinput set-prop "pointer:MX Master 2S" 'libinput Natural Scrolling Enabled' 1


# Tapping Enabled
xinput set-prop 'DELL081C:00 044E:121F Touchpad' 'libinput Tapping Enabled' 1

