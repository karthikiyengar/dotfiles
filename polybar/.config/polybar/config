[module/workspaces-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -e /tmp/.xmonad-workspace-log ]
tail = true
format-foreground = #43abc9

[module/title-xmonad]
type = custom/script
format-foreground = #fb9224
label-maxlen = 100
exec = tail -F /tmp/.xmonad-title-log
exec-if = [ -e /tmp/.xmonad-title-log ]
tail = true

[module/layout-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-layout-log
exec-if = [ -e /tmp/.xmonad-layout-log ]
tail = true



[module/weather]
type = custom/script
format-prefix = "Wea: "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/scripts/weather.sh
interval = 600
click-left = xdg-open https://www.accuweather.com/en/de/berlin/10178/weather-forecast/178087
label-font = 1

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python3 ~/.config/polybar/scripts/spotify.py -f '{artist}: {song}'
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
double-click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
double-click-right = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
format-underline = #1db954
label-maxlen = 100
