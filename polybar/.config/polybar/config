[colors]
background = #222
background-alt = #444
foreground = #adadad
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
success = #66b266
alert = #bd2c40

[bar/xmother]
width = 100%
height = 23
radius = 0.0
override-redirect=true
fixed-center = false
enable-ipc = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2
padding-bottom = 0

module-margin-left = 0
module-margin-right = 2

font-0 = Hasklig:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "Noto Color Emoji:pixelsize=16:style=Regular:antialias=true:scale=10;2"

modules-left = xmonad
; modules-center =
modules-right = spotify weather filesystem memory cpu battery dnd caffeinate date
tray-position = right
tray-pad= 0
;tray-background = #0063ff
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
format = <label-indicator> <label-layout>
format-spacing = 0
format-prefix = 
label-indicator-on-capslock = c
label-indicator-on-numlock = n
label-indicator-on-scrolllock = s
label-indicator-on = 
label-indicator-off = 
format-foreground = ${colors.primary}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %percentage_used%%
label-unmounted = %mountpoint% not mounted
format-mounted-prefix = "Df: "
format-mounted-prefix-foreground = ${colors.foreground-alt}  
label-unmounted-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "Cpu: "
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "Mem: "
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #4bffdc
label = %percentage_used%%


[module/protonvpn]
type = custom/script
exec = ~/.config/polybar/scripts/vpncheck.sh
interval = 5

[module/date]
type = internal/date
interval = 5
date = "W%V-%u %d.%m"
time = %H:%M
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #0a6cf5
label = %date% %time%
format =%{A1:~/.config/polybar/scripts/calendar.sh:} <label> %{A}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging-prefix = "Bat: "
format-charging-prefix-foreground = ${colors.foreground-alt}
format-charging = <label-charging>
format-charging-underline = ${colors.success}

format-discharging-prefix = "Bat: "
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging = <label-discharging>
format-discharging-underline = ${colors.alert}

format-full-prefix = "Bat: "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-foreground = ${colors.success}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

[module/xmonad]
type = custom/script
exec = xmonad-log
tail = true

[module/weather]
type = custom/script
format-prefix = "Wea: "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/scripts/weather.sh
interval = 600
click-left = xdg-open https://www.accuweather.com/en/de/berlin/10178/weather-forecast/178087
label-font = 1

; TODO: color as env variable
[module/caffeinate]
type = custom/script
interval = 1
format = <label>
exec =  [ "$(pgrep -x xidlehook)" ] && echo "%{F#66b266}N%{F- }" || echo "%{F#ffb52a}Y%{F- }"
format-prefix = "Caf: "
format-prefix-foreground = ${colors.foreground-alt}
click-left = ~/.config/polybar/scripts/caffeinate-toggle.sh


; TODO: color as env variable
[module/dnd]
type = custom/script
interval = 1
format = <label>
exec =  [ "$(pgrep -xf /run/current-system/sw/bin/dunst)" ] && echo "%{F#66b266}N%{F- }" || echo "%{F#ffb52a}Y%{F- }"
format-prefix = "DND: "
format-prefix-foreground = ${colors.foreground-alt}
click-left = ~/.config/polybar/scripts/dunst-toggle.sh

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python3 ~/.config/polybar/scripts/spotify.py -f '{play_pause} {artist}: {song}'
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
format-underline = #1db954
label-maxlen = 32
